# API Keys
# AI Provider 选择: anthropic 或 openai
AI_PROVIDER=openai

# Anthropic Claude API 配置
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI 兼容 API 配置（智谱 GLM）
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://open.bigmodel.cn/api/paas/v4/

# Application Settings
APP_NAME=小芽家教
APP_VERSION=0.1.0
DEBUG=True

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite:///./sprout_chat.db

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# AI Settings
# 模型名称:
# - Claude: claude-3-5-sonnet-20241022
# - 智谱 GLM: glm-4-plus, glm-4-0520, glm-4, glm-4-air, glm-4-airx, glm-4-flash
AI_MODEL=glm-4-plus
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.7

# Speech Recognition
STT_PROVIDER=web_speech
TTS_PROVIDER=web_speech

# Session Management
SESSION_TIMEOUT_MINUTES=30
MAX_CONVERSATION_HISTORY=10